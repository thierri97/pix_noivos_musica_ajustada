      allowfullscreen>
    </iframe>
  </div>

  <script>
    function copyPixKey() {
      const key = document.getElementById('pixKey').innerText.trim();
      navigator.clipboard.writeText(key).then(() => {
        for (let i = 0; i < 20; i++) {
          const icon = document.createElement('div');
          icon.className = Math.random() > 0.5 ? 'heart' : 'star';
          icon.textContent = Math.random() > 0.5 ? '💙' : '⭐';
          icon.style.left = Math.random() * 100 + 'vw';
          icon.style.top = Math.random() * 40 + 30 + 'vh';
          document.body.appendChild(icon);
          setTimeout(() => icon.remove(), 2000);
        }
      });
    }
  </script>
</body>
